{
  "name": "@eskoolportal/core",
  "version": "0.0.1",
  "description": "Core module",
  "keywords": [
    "eskoolportal",
    "school"
  ],
  "author": "ayrbox <sabin.dangol@hotmail.com>",
  "homepage": "http://eskoolportal.com",
  "license": "MIT",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayrbox/eskoolportal.git"
  },
  "scripts": {
    "test": "jest",
    "orm": "ts-node ./node_modules/.bin/typeorm -f ./ormconfig.ts",
    "dev": "ts-node ./src/index.ts",
    "seed": "ts-node ./src/seeders/index.ts",
    "clean": "rm -rf ./lib",
    "build": "yarn clean && tsc -p ."
  },
  "bugs": {
    "url": "https://github.com/ayrbox/eskoolportal/issues"
  },
  "devDependencies": {
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/rosie": "^0.0.38",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "faker": "^5.1.0",
    "pg": "^8.5.1",
    "rosie": "^2.0.1",
    "sequelize": "^6.3.5",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "./__test__/setupConnection.ts"
    ],
    "testMatch": [
      "**/src/**/*.test.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globalSetup": "./__test__/globalSetup.ts",
    "globalTeardown": "./__test__/globalTeardown.ts"
  }
}
